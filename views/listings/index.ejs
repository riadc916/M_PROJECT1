<% layout("/layouts/boilerplate.ejs") -%>
<body>
  <!-- <h3>All listings</h3> -->
  <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter {
      text-align: center;
      margin-right: 3.2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }
    .filter:hover {
      opacity: 1.7;
      cursor: pointer;
    }
    .filter p {
      font-size: 0.9rem;
    }
    a {
      text-decoration: none;
      color: black;
    }
    @media (max-widtth: 720px) {
      #filters {
        display: block;
      }
    }
    .tax-Info {
      display: none;
    }
    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height:2.6rem;
      margin-left: .4rem;
      padding:1rem;
      display: flex;
      align-items: center;
    }
  </style>
  <button
    class="btn btn-dark d-lg-none my-2"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#collapseExample"
    aria-expanded="false"
    aria-controls="collapseExample"
  >
    Categories
  </button>

  <!-- Collapsible Filter Section -->
  <div class="collapse d-lg-block" id="collapseExample">
    <div id="filters">
      <div class="filter">
        <a href="/listings/category/Trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Room">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Room</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Iconic Cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Mountain">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountain</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Castles">
          <div><i class="fa-solid fa-place-of-worship"></i></div>
          <p>Castles</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Amazing Pool">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pool</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Farms">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Arctic">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </a>
      </div>
      <div class="filter">
        <a href="/listings/category/Boats">
          <div><i class="fa-solid fa-ship"></i></div>
          <p>Boats</p>
        </a>
      </div>
      <div class="tax-toggle filter mb-3">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="switchCheckDefault"
          />
          <label class="form-check-label" for="switchCheckDefault"
            >Display Taxes</label
          >
        </div>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let listing of alllistings){%>
    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card col listing_card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br />
            &#36; <%= listing.price %> /Night
            <i class="tax-Info">&nbsp; &nbsp; +18% tax</i>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-Info");
    for (info of taxInfo) {
      if (info.style.display !== "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
